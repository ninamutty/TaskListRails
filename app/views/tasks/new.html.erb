<h1>Create a New Task: </h1>

<%= form_for @onetask, url: create_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>


  <%= f.submit %>
<% end %>


