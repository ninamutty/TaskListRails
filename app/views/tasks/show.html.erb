<% if @task == nil %>
  <h1 class="no-existance-error"> The Task You Seek Does Not Exist </h1>
  <h2> <%= link_to("Back To Home", root_path) %></h2>
<% else %>
  <article>
    <h1><%=  @task.title%></h1>
    <h2><%=  @task.description%></h2>
    <p> Complete: <%= @task.complete %> </p>

    <% if @task.complete == true %>
      <p> Completed: <%= @task.completed_at %></p>
    <% end %>


    <p> <%= button_to "Edit", {action: "edit", id: @task.id}, method: :get %></p>
    <p> <%= button_to "Delete", {action: "destroy", id: @task.id}, method: :delete, data: {confirm: "Are you sure?"} %></p>

  </article>
<% end %>
